@page
@model TagsModel

<aside>
    <vc:user-nav />
</aside>

<article>
    <fieldset>
    <legend>List of all tags</legend>
    <table>
        <thead>
            <tr><th>Tag</th><th>Number of record entries</th></tr>
        </thead>
        <tbody>
            @foreach (var (tag, tagCount) in Model.Tags) {
            <tr><td><a href="/?tag=@tag">@tag</a></td><td>@tagCount</td></tr>
            }
        </tbody>
    </table>
    </fieldset>
</article>
